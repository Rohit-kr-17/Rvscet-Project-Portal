<script
	src="https://kit.fontawesome.com/d787503892.js"
	crossorigin="anonymous"
></script>
<div class="container">
	<li>
		<div class="card">
			<h2 class="post-name"><%= post.name %></h2>
			<br />
			<h4 class="software"><%= post.software %></h4>
			<h4 class="software"><%= post.teamMembers %></h4>

			<br />
			<div class="content"><p><%= post.content %></p></div>

			<br />
			<div>
				<a class="software" target="_blank" href="<%= post.link %>"
					>View Project</a
				>
				<span class="space-inbetween">|</span>
				<a class="software" target="_blank" href="<%= post.driveLink %>"
					>Download Files <i class="fa-solid fa-download"></i
				></a>
			</div>

			<div class="username">
				<small>
					<% if (locals.user && locals.user.id == post.user.id){ %>
					<small>
						<a href="/posts/destroy/<%= post.id %>">Delete</a>
					</small>
					<% } %></small
				>
			</div>
			<hr />

			<div class="container">
				<h2>Comments</h2>
				<div class="comments" onclick="myfunction()">
					<div class="post-comments-list">
						<ul id="post-comments-<%= post._id %>">
							<% for (comment of post.comments){%> <%- include('_comment') -%>
							<%} %>
						</ul>
					</div>
				</div>
				<div class="post-comments">
					<% if (locals.user){ %>
					<form action="/comments/create" method="POST">
						<input
							type="text"
							name="content"
							placeholder="Type Here to add comment..."
							required
						/>
						<input type="hidden" name="post" value="<%= post._id %>" />
						<input type="submit" value="Add Comment" />
					</form>

					<% } %>
				</div>
			</div>
		</div>
	</li>
</div>

<%- include('_footer'); %>
